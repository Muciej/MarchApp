<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/insets">
    
    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edycja danych"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_colon"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/name"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/black"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lastname_colon"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lastname_edit"
            android:layout_width="match_parent"
            android:layout_marginStart="18dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lastname"
            android:background="@drawable/edit_text_background"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/start_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/starting_number"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/start_no_edit"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_toRightOf="@+id/start_no"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:textStyle="bold"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/pseudonim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pseudonim_colon"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pseudonim_edit"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_toRightOf="@+id/pseudonim"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </RelativeLayout>

    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/backb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="20dp"
            android:text="@string/return_button" />

        <Button
            android:id="@+id/editButton"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="20dp"
            android:text="@string/save_changes" />
    </GridLayout>

</LinearLayout>